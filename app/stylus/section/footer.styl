@media (max-width: 1023px) and (min-width: 768px)

    footer
        height: 1000px;
        padding: 80px 0;
        background: #132342;
        position: relative;
    
    .f__foot__item
    height auto
    
    .f__foot__item
        width 50%
    .f__soc
        padding-left 0px
                
    
@media (max-width: 767px)
    

    footer
        padding 35px 0
        height: 1200px;
        padding: 80px 0;
        background: #132342;
        position: relative;
        
        .block__phone
            position relative
            display block
            margin 0 auto
            float none
            text-align center
            
                            
            span
                font-size: 14px;
                white-space nowrap
                    
                .bold
                    font-size: 14px;
        
        article
            p
                padding-right 0
                font-size 15px
    
    .f__foot__item
    height auto
    
    .f__foot__item
        width 100%
        height 45px
        margin-top 25px
    .f__soc
        padding-left 0px
        width 100%
        text-align center
        
        a
            display inline-block
            float none
            margin 0 5px
                
    
    .f__form {
        width: 100%;
        height: 520px;
        margin: 0 auto;
        background: #f3f3f3;
        border-radius: 5px;
        overflow: hidden;
    }
    
    .f__logo
        position relative
        display block
        margin 0 auto
        float none
        height 70px
        
    .f__foot__item_txt
        white-space normal
        
    
    
    
