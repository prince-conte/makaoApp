footer
    height 911px
    padding 80px 0
    background colH
    position relative
    
    .f__img-bg
        abs(block,100%,100%,0px,0px)
        bgP(top,center,cover)
        opacity .3
        background url(../img/f-bg.jpg)
    
    .content
        height 100%
        
    article
        h3
            color #fff
            text-align center
        p
            color #fff
            text-align center
            
.f__floating
    float-w(100%)
    margin 27px 0 75px
    
.f__form
    width 400px
    height 480px
    margin 0 auto
    background colbg
    border-radius 5px
    overflow hidden
    
    
.f__img-bg
    abs(block,100%,100%,0px,0px)
    bgP(top,center,cover)
    opacity .3
    background url(../img/f-bg.jpg)
    
    
.f__foot
    float-w(100%)
    height 100px
    border-top solid 1px #5a6378
    

.f__foot__item
    float left
    height 90px
    display inline-table
    
.f__foot__item:last-child
    float right
    
.f__foot__item_txt
    font-size 14px
    float left
    white-space nowrap
    padding 0 35px
    color #a4abc2
    
    
.f__logo
    float left
    display table
    size(129px,90px)
    margin-right 30px
    

    
.f__soc
    float left
    padding-left 35px
    
.ico 
    float left
    display inline-block
    bgP(center,center,contain)
    width 30px
    height 30px
    margin-right 17px
                
.ico:hover
    opacity .7
                
                
.face
    background url(../img/face.png)
.tv
    background url(../img/tv.png)
.inst
    background url(../img/inst.png)
.linkedin
    background url(../img/linkedin-.png)
    
    
    
      
    
