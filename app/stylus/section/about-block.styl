.about
    padding 110px 0
    
    article
        text-align center
    
    h2
        color coltxt
        margin-bottom 20px
        text-align center
    
    p
        color coltxt
        
        
.about__company
    float-w(100%)
    margin 50px  65px

.about__company__item
    float-w(20%)
    
.about__company__item_b
    float left
    display block
    
.about__company__item_img
    float left
    display block
    position relative
    width 100%
    text-align center
    
    img 
        display inline-block;
        width auto
        height auto
        max-width 100%
            
.about__company__item_t
    float left;
    width 100%
    text-align center
    font-size 24px
    margin-top 25px
    
    
.about__desc
    float-w(100%)
    border-radius: 5px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 21px 29px 0px rgba(113, 113, 113, 0.07);
    min-height 120px
    padding 7px
        
    p
        font-size 12px
        color #949494
        text-align center
        float left
        width 100%
        line-height 1.7


    
    
    
        
    
  
            
            
   
    
    
    
    
    
    
    
    
