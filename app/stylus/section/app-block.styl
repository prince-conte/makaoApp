.app
    padding 100px 0
    position relative
    
    
    .button-block
        text-align center
        margin-top 32px
        
        .button
            font-size 14px
            padding: 10px 35px;
        
        .button:hover
            border-color colfirm
            color colfirm   
    
.app__item
    float-w(100%)
    min-height 250px
    border-radius 5px
    background-color rgb(255, 255, 255)
    box-shadow 0px 21px 29px 0px rgba(113, 113, 113, 0.07)
    margin 40px 0
    padding 42px
    
.app__item__left-block
    float-w(255px)
    padding-right 50px
    text-align center
    

.app__item__body
    float-w(840px)

    
    
