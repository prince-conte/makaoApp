@media (max-width: 1279px) and (min-width: 1024px)
    

    .info__floating__c__item 
        padding-right 55px
        float left
        
    
    .info__floating__c__item
        font-size 15px
    
 
    
            


@media (max-width: 1023px) and (min-width: 768px)
    
    .info
        article
            p
                padding-right 0px

    .info__floating__c__item 
        padding-right 30px
        float left
        
    
    .info__floating__c__item
        font-size 15px
        
        
    .info__floating__item
        width 100%
        margin-top 25px
    
        
    
@media (max-width: 767px)
    
    .info
        article
            p
                padding-right 0px

    .info__floating__c__item
        width 33.33333%
        padding-right 0px
        float left
        margin 5px 0
        
        img
            position relative
            display block
            margin 0 auto
            float none
        
    
    .info__floating__c__item
        font-size 15px
        
        
    .info__floating__item
        width 100%
        margin-top 65px
        
    .info__floating__item_t
        margin-top 14px
        
    .info__floating__item_desc
        margin-top 16px
    
        
    
    