@media (max-width: 1279px) and (min-width: 1024px)
    
    .about__company
        width 100%
        text-align center
        margin: 50px 0px;
    
    .about__company__item 
        column(1/3)
        margin 15px 0
        float none
        display inline-block


            


@media (max-width: 1023px) and (min-width: 768px)

    
    .about__company
        width 100%
        text-align center
        margin: 50px 0px;
    
    .about__company__item 
        column(1/3)
        margin 15px 0
        float none
        display inline-block
       
    
@media (max-width: 767px)
    
    .about
        p
            padding 0px

        
     
    .about__company
        width 100%
        text-align center
        margin: 50px 0px;
    
    .about__company__item 
        width 100%
        margin 15px 0 20px
        float none
        display inline-block
        
    .about__company__item_b
        float none
        
    .about__company__item_t
        margin-top 10px
        