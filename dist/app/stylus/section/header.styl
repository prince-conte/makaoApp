header
    float-w(100%)
    height 700px
    background colH
    position relative
    
    .button-block
        margin-top 30px
        margin-bottom 10px
        text-align left

    
    h1
        color #fff
        
    
    .content
        height 100%;
        
    article
        width 690px
    p 
        color #fff !important
        margin-bottom 0px
        
.h__floating-t
    abs(table,100%,100%,0px,0px)
    padding-top 96px
        
    
.h__img-bg
    abs(block,100%,100%,0px,0px)
    bgP(top,center,cover)
    opacity .3
    background url(../img/home.jpg)
    
    
.h__company
    margin 45px 0
    float-w(100%)
    
.h__company__item
    float left
    display inline-block
    padding-right 38px
    border-radius: 12px;
    overflow: ellipsis;
    
    img 
        float left
        width auto
        max-width 100%
        display block
        
.h__company__item:last-child
    padding-right 0px
    
    
.h__form
    float right
    width 400px
    height 480px
    background colbg
    border-radius 5px

.h__form__body2
    float-w(100%)
    
    
.h__scrl-b
    position absolute
    display block
    bottom 75px
    left 0px
    height 40px
    
    .h_scrl-b__body
        float left
        height 100%
        display block
        
    i
        width 22px
        height 34px
        bgP(center,center,contain)
        background url(../img/mouse.png)
        display inline-block
        float left
        m-speed(.3s)
        
    span
        display inline-block
        float left
        padding-left 20px
        color #fff
        font-size 14px
        font-weight 300
        m-speed(.3s)
        
        
.h__scrl-b:hover
    i
        background url(../img/mouseh.png)
        
    span
        color colfirm
    
    

    
    
