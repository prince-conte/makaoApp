    header
        min-height 700px
        height auto
        
        article
            width 100%
            padding 45px
            
            
            
    .h__floating-t 
        position relative
        float-w(100%)
        height auto
        
    .h__form
        float-w(100%)
        margin 10px 0 65px
        background transparent
        
    .h__form__body2
        position relative
        display block
        margin 0 auto
        width 480px
        float none
        
        
        


            

